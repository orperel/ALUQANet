{
    "dataset_reader": {
        "type": "bert-drop",
        "tokenizer": {
            "type": "bert-drop",
            "pretrained_model": "bert-base-uncased"
        },
        "token_indexers": {
            "tokens": {
                "type": "bert-drop",
                "pretrained_model": "bert-base-uncased"
            }   
        },
        "extra_numbers": [100, 1],
        "answer_type": ["number"]
    },
    "iterator": {
        "type": "basic",
        "batch_size": 4
    },
    "model": {
        "type": "aluqa_count",
        "bert_pretrained_model": "bert-base-uncased",
        "dropout_prob": 0.1,
        "special_numbers": [100, 1],
        "answering_abilities": ["counting"]
    },
    "train_data_path": "../../data/drop_dataset/drop_dataset_count.json",
    "validation_data_path": "../../data/drop_dataset/drop_dataset_count.json",
    "trainer": {
        "cuda_device": 0,
        "keep_serialized_model_every_num_seconds": 3600,
        "num_epochs": 100,
        "optimizer": {
            "type": "bert_adam",
            "lr": 1e-05
        },
        "patience": 10,
        "summary_interval": 100,
        "validation_metric": "+f1"
    }
}